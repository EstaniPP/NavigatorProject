<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.NavigatorProject.DAO.IUserDAO">
	<resultMap id="UserResultMap" type="com.solvd.NavigatorProject.models.user.User">
		<id property="id" column="id"></id>
		<result property="name" column="name"></result>
		<result property="lastName" column="last_name"></result>
		<result property="birthDate" column="birth_date"></result>
		<result property="address" column="address"></result>
	</resultMap>

	<select id="getEntities" resultMap="UserResultMap">
	<![CDATA[
		SELECT * FROM Users;
	]]>
	</select>
	
	<select id="getEntity" resultMap="UserResultMap">
	<![CDATA[
		SELECT * FROM Users WHERE id = #{id};
	]]>
	</select>

	<insert id="save" useGeneratedKeys="true" keyProperty="id">
	<![CDATA[
		INSERT INTO Users(name,last_name,birth_date,address) VALUES (#{name},#{lastName},#{birthDate},#{address});
	]]>
	</insert>
	
	<update id="update">
	<![CDATA[
		UPDATE Users SET name = #{name}, last_name = #{lastName}, birth_date = #{birthDate}, address = #{address} WHERE id = #{id};
	]]>
	</update>
	
	<delete id="delete">
	<![CDATA[
		DELETE FROM Users WHERE id = #{id};
	]]>
	</delete>	
</mapper>
